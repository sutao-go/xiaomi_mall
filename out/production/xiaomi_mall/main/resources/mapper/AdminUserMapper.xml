<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="coom.imooc.mapper.AdminUserMapper">
    <resultMap id="BaseResultMap" type="coom.imooc.entity.AdminUser">
        <id column="user_name" jdbcType="VARCHAR" property="userName" />
        <result column="pass_word" jdbcType="VARCHAR" property="passWord"/>
        <result column="status" jdbcType="VARCHAR" property="status"/>
        <result column="serial_number" jdbcType="VARCHAR" property="serialNumber"/>
    </resultMap>
    <sql id="BaseResult_list">
        user_name,pass_word,status
    </sql>

    <select id="login" resultMap="BaseResultMap" >
        select
        <include refid="BaseResult_list"/>
        from adminuser
        where user_name = #{userName,jdbcType=VARCHAR}
        and pass_word = #{passWord,jdbcType=VARCHAR}
    </select>

    <select id="insert" parameterType="coom.imooc.entity.AdminUser" resultMap="BaseResultMap">
    insert into adminuser(user_name,pass_word)
    values (#{userName,jdbcType=VARCHAR},#{passWord,jdbcType=VARCHAR})
    </select>

    <select id="find" parameterType="coom.imooc.entity.AdminUser" resultMap="BaseResultMap">
        select * from adminuser where user_name = #{userName,jdbcType=VARCHAR}
    </select>

    <select id="findAdministrator" resultMap="BaseResultMap" parameterType="coom.imooc.entity.AdminUser">
        select
        user_name,pass_word
        from
        administrator
        where
        user_name = #{userName,jdbcType=VARCHAR}
        and
        pass_word = #{password,jdbcType=VARCHAR}
    </select>

    <select id="findUserStatus" resultMap="BaseResultMap" parameterType="coom.imooc.entity.AdminUser">
        select user_name,status
        from adminuser
    </select>

    <update id="changeUserStatus">
        update adminuser
        <set>
            status = #{disableAccount,jdbcType=VARCHAR}
        </set>
        where
        serial_number = #{id,jdbcType=VARCHAR}
    </update>

    <update id="changePassword">
        update administrator
        <set>
            pass_word = #{newpassword,jdbcType=VARCHAR}
        </set>
        where
            user_name = #{userName,jdbcType=VARCHAR}
    </update>
</mapper>